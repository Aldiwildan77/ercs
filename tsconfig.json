{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "hardhat.config.ts",
    "test/**/*.ts",
    "ignition/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "artifacts",
    "cache",
    "coverage",
    "typechain-types"
  ],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}
